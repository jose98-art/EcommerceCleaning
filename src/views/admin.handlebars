<div class="containAdmin">

  <div class="titleAdmin">
    <h1>Administra, agrega o actualiza la informaci√≥n de tus productos y/o clientes</h1>
  </div>

  <div class="formAdmin">
    <h1>Agrega tus productos o articulos</h1>
    <form id="formulario" action="" method="post">

      <label for="title">Title:
        <input type="text" name="title" id="title" />
      </label>

      <label for="description">Description:
        <input type="text" name="description" id="description" />
      </label>

      <label for="code">Code:
        <input type="number" name="code" id="code" />
      </label>

      <label for="price">Price:
        <input type="number" name="price" id="price" />
      </label>

      <label for="status">Status:
        <input
          placeholder="true or false"
          type="text"
          name="status"
          id="status"
        />
      </label>

      <label for="stock">Stock:
        <input type="text" name="stock" id="stock" />
      </label>

      <label for="category">Category:
        <input type="text" name="category" id="category" />
      </label>

      <label for="thumbnails">Thumbnails:
        <input type="text" name="thumbnails" id="thumbnails" />
      </label>
      

      <input class="inputSubmit" type="submit" value="CREAR" id="submit" />

    </form>
  </div>

   <div class="containtTable">
    <div class="titleTable">
      <h1>Administra tus Productos</h1>
    </div>

    <div class="productsTable">
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Price</th>
            <th>Status</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Thumbnails</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          {{! condicional para insertar los productos }}
          <tr>
            <td>Title</td>
            <td>Description</td>
            <td>Code</td>
            <td>Price</td>
            <td>Status</td>
            <td>Stock</td>
            <td>Category</td>
            <td>https://mosaic.uoc.edu/ac/le/es/m6/ud7/76510_m6_66b.gif</td>
            <td>
              <button>
